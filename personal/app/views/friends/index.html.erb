<p id="notice"><%= notice %></p>

<h1>友達一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>住所</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr>
        <td><%= friend.name %></td>
        <td><%= friend.address %></td>
        <td><%= link_to '詳細', friend %></td>
        <td><%= link_to '編集', edit_friend_path(friend) %></td>
        <td><%= link_to '削除', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新規作成', new_friend_path %>
